{{ academic_years }}

<article class="content-block">
	<div class="row">
		<div class="col-12 md-12 sm-12">
			<div id="filter-target">
				{% if content %}
					{% for year_name,year in content %}
						<div class="row">
							<div class="col-12 md-12 sm-12">

								<div class="title-block--gallery">
									<h2>{{ year_name }}</h2>
								</div>
								<!--/title-block--gallery-->

							</div>
							<!--/col-12 md-12 sm-12-->
						</div>
						<!--/row-->

						<div class="row">
							{% for gallery in year %}

								{% if gallery.field_images %}
									{% if gallery.field_images.0 %}
										{% if gallery.field_images.0.getValue() %}
											{% set target_id = gallery.field_images.0.value.target_id %}
											{% if target_id %}

												{% set media = drupal_entity('media',target_id) %}
												{% if media %}
													{% set media_image = drupal_image( media['#media'].field_media_image.0.value.target_id ,'thumbnail') %}

												{% endif %}
											{% endif %}
										{% endif %}
									{% endif %}
								{% endif %}
								<div class="col-3 md-6 sm-12">

									<div class="gallery-block">
										{% if media_image['#uri'] %}
											<div class="gallery-block__thumbnail" style="background-image: url({{ media_image['#uri']|file_url }});">
												<img src="assets/images/placeholder-1.gif" alt="fishing lure" title="Galerii pilt">
											</div>
											<!--/gallery-block__thumbnail-->
										{% endif %}

										<div class="gallery-block__gallery-info">
											<h4>
												<a href=" {{ drupal_url('node/'~ gallery.id) }}">
													{{ gallery.getTitle() }}</a>
											</h4>
											<span class="date-indicator">{{ gallery.getCreatedTime()|date('d.m.Y') }}</span>
										</div>
										<!--/gallery-block__gallery-info-->
									</div>
									<!--/gallery-block-->

								</div>
								<!--/col-3 md-6 sm-12-->
							{% endfor %}
						</div>
					{% endfor %}
					<div class="row">
						<div class="col-12 md-12 sm-12">
							<div class="paginator-block">
								{{ pager }}
							</div>

						</div>
						<!--/col-12-->
					</div>
					<!--/row-->


				{% else %}
					<div class="row">
						<div class="col-12 md-12 sm-12">
							{{"No galleries matching the filters were found!"|t}}

						</div>
					</div>
				{% endif %}
			</div>
		</div>
		<!--/col-12-->
	</div>
	<!--/row-->
</article>
<!--/content-block-->

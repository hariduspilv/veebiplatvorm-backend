{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */

#}
<div class="form-item custom-rate-it {% if element['#errors'] %} error {% endif %}">
  <label for="{{ element['#id'] }}">{{ element['#title'] }}{% if element['#required'] %}
    *
    {% endif %}:</label>

  <input type="range" min="0" max="5" step="1" value="0" id="{{ element['#id'] }}" {{ attributes.removeAttribtute(['class']) }}>
  <div class="rateit" data-plugin="rateIt" data-rateit-starwidth="30" data-rateit-starheight="30" data-btn-text="{{"Cancel"|t}}" data-rateit-backingfld="#{{ element['#id'] }}" data-rateit-ispreset="true"></div>
  {% if element['#errors'] %}
    <span class="error-text">{{ element['#errors'] }}</span>
  {% endif %}
</div>

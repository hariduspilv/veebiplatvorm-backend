{% if children %}
  {% if children['#content'] %}
    {% if children['#content']['years'] %}
      <script src="{{ base_path ~ directory }}/templates/forms/filters/filterRefresh.js"></script>
      {% for year in children['#content']['years']  %}
        {% if year %}
          <span class="btn-input">
          <label for="mobile-tag">{{ year }}</label>
          <input type="checkbox" id="mobile-tag" value="{{ year }}">
          <span  data-remove-item="{{ year }}" class="btn btn-tag btn-tag-remove">{{ year }}</span>
        </span>
        {% endif %}
      {% endfor %}
    {% endif %}
    {% if children['#content']['positions'] and children['#content']['positions'] != 'all' %}
      <script src="{{ base_path ~ directory }}/templates/forms/filters/filterRefresh.js"></script>
      <span id="mobile-tag1" class="btn-input">
        <label for="mobile-tag1">{{ children['#content']['positions'] }}</label>
        <span  data-remove-item="{{ children['#content']['positions'] }}" class="btn btn-tag btn-tag-remove">
          <input type="checkbox" id="mobile-tag1" name="{{ children['#content']['positions'] }}" value="{{ children['#content']['positions'] }}">
          {{ children }}
          {{ children['#content']['positions'] }}
        </span>
      </span>
    {% endif %}
    {% if children['#content']['departments'] and children['#content']['departments'] != 'all' %}
      <script src="{{ base_path ~ directory }}/templates/forms/filters/filterRefresh.js"></script>
      <span id="mobile-tag2" class="btn-input">
        <label for="mobile-tag2">{{ children['#content']['departments'] }}</label>
        <span  data-remove-item="{{ children['#content']['departments'] }}" class="btn btn-tag btn-tag-remove">
          <input type="checkbox form-checkbox custom-form-input" id="mobile-tag2" name="{{ children['#content']['departments'] }}" value="{{ children['#content']['departments'] }}">
          {{ children }}
          {{ children['#content']['departments'] }}
        </span>
      </span>
    {% endif %}
  {% endif %}
{% endif %}
